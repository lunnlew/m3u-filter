# 构建前端
FROM --platform=$BUILDPLATFORM node:20-alpine AS frontend-builder
WORKDIR /app
COPY frontend/package.json frontend/pnpm-lock.yaml ./
RUN corepack enable && pnpm install --no-frozen-lockfile --force
COPY frontend .
RUN pnpm run build

# 构建后端
FROM --platform=$BUILDPLATFORM python:3.11-slim AS builder
WORKDIR /app

# 安装构建依赖
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# 安装Python依赖
COPY backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir pyinstaller

# 复制后端代码并构建
COPY backend .
RUN pyinstaller --noconfirm --clean pyinstaller.spec

# 最终镜像
FROM --platform=$BUILDPLATFORM python:3.11-slim
WORKDIR /app

# 创建必要的目录结构
RUN mkdir -p /app/data/{logs,web,resource}

# 仅复制必要的运行时文件
COPY --from=builder /app/dist/m3u_filter_backend /app/m3u-filter
COPY --from=frontend-builder /app/dist ./web

# 设置环境变量
ENV PYTHONUNBUFFERED=1 \
    TZ=Asia/Shanghai \
    M3U_FILTER_DATA_ROOT=/app/data \
    M3U_FILTER_WEB_ROOT=/app/data/web \
    M3U_FILTER_RESOURCE_ROOT=/app/data/resource \
    M3U_FILTER_LOGS_ROOT=/app/data/logs

VOLUME /app/data
EXPOSE 3232

# 直接运行二进制文件
CMD ["/app/m3u-filter"]