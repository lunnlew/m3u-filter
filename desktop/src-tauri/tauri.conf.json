{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "M3U Filter",
  "version": "1.0.0",
  "identifier": "com.m3u.filter",
  "build": {
    "beforeBuildCommand": "cd ../backend && pyinstaller --noconfirm --clean pyinstaller.spec && cd ../frontend && pnpm run build",
    "beforeDevCommand": "cd ../frontend && pnpm run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../../frontend/dist"
  },
  "app": {
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": false,
      "showMenuOnLeftClick": true
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "M3U Filter",
        "width": 1200,
        "visible": true,
        "decorations": true,
        "skipTaskbar": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png", 
      "icons/icon.ico",
      "icons/icon.png",
      "icons/icon.icns"
    ],
    "longDescription": "M3U Filter Desktop Application",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "shortDescription": "",
    "targets": ["nsis", "msi", "dmg", "deb", "rpm"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
